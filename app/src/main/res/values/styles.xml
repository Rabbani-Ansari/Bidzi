<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="OtpEditTextStyle">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/otp_box_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:importantForAutofill" tools:targetApi="26">no</item>
    </style>
    <style name="CompactBottomNavTextActive">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CompactBottomNavTextInactive">
        <item name="android:textSize">9sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
    </style>



    <style name="ModernAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="dialogCornerRadius">24dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>

        <!-- Title Styling -->
        <item name="materialAlertDialogTitleTextStyle">@style/ModernDialogTitle</item>

        <!-- Body Text Styling -->
        <item name="materialAlertDialogBodyTextStyle">@style/ModernDialogBody</item>

        <!-- Button Styling -->
        <item name="buttonBarPositiveButtonStyle">@style/ModernDialogPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/ModernDialogNegativeButton</item>
    </style>

    <!-- Dialog Title Style -->
    <style name="ModernDialogTitle" parent="MaterialAlertDialog.Material3.Title.Text.CenterStacked">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Dialog Body Style -->
    <style name="ModernDialogBody" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_medium</item>
        <item name="android:lineHeight" tools:ignore="NewApi">22sp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Positive Button (Primary Action) -->
    <style name="ModernDialogPositiveButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/green</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="elevation">2dp</item>
    </style>

    <!-- Negative Button (Secondary Action) -->
    <style name="ModernDialogNegativeButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/text_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="rippleColor">@color/green</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearance">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


</resources>