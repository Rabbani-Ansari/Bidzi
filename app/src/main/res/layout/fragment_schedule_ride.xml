<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header with Back Button -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_back_24px"
            android:contentDescription="@string/back_button"
            app:tint="#333333" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Schedule Ride"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <!-- Location Input Cards (Fixed at Top) -->
    <LinearLayout
        android:id="@+id/locationInputsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerLayout"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="4dp">

        <!-- Pickup Location Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pickup Location"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:paddingHorizontal="16dp"
                android:paddingBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/edit_text_background"
                android:paddingHorizontal="16dp"
                android:layout_marginHorizontal="16dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/circle_orange"
                    android:contentDescription="pickup_location"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/pickupInput"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:hint="Enter pickup location"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:background="@null"
                    android:singleLine="true" />

                <ImageView
                    android:id="@+id/pickupClearIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_clear"
                    android:contentDescription="Clear"
                    android:visibility="gone"
                    android:layout_marginEnd="8dp"
                    app:tint="#999999" />

                <ImageView
                    android:id="@+id/pickMapIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/map"
                    android:contentDescription="Choose on map"
                    android:padding="4dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Drop Location Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Drop Location"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:paddingHorizontal="16dp"
                android:paddingBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/edit_text_background"
                android:paddingHorizontal="16dp"
                android:layout_marginHorizontal="16dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/circle_green"
                    android:contentDescription="@string/drop_location"
                    app:tint="#00AA00"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/dropInput"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:hint="Enter destination"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:background="@null"
                    android:singleLine="true" />

                <ImageView
                    android:id="@+id/dropClearIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_clear"
                    android:contentDescription="Clear"
                    android:visibility="gone"
                    android:layout_marginEnd="8dp"
                    app:tint="#999999" />

                <ImageView
                    android:id="@+id/dropMapIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/map"
                    android:contentDescription="Choose on map"
                    android:padding="4dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Search Suggestions RecyclerView (Below Location Inputs) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/suggestionsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="300dp"
        android:layout_below="@id/locationInputsLayout"
        android:background="@android:color/white"
        android:visibility="gone"
        android:elevation="8dp" />

    <!-- Main Content ScrollView -->
    <ScrollView
        android:id="@+id/mainContentScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/locationInputsLayout"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

            <!-- Date and Time Selection -->
            <LinearLayout
                android:id="@+id/dateTimeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginHorizontal="8dp"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_schedule"
                        android:contentDescription="Schedule"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/orange" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="When do you need the ride?"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />
                </LinearLayout>

                <!-- Date and Time Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Date Section -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textSize="12sp"
                            android:textColor="#999999"
                            android:layout_marginBottom="4dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/edit_text_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_schedule"
                                android:contentDescription="Calendar"
                                android:layout_marginEnd="8dp"
                                app:tint="#666666" />

                            <EditText
                                android:id="@+id/etPickDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Pick a date"
                                android:textSize="14sp"
                                android:background="@null"
                                android:textColor="#333333"
                                android:textColorHint="#CCCCCC"
                                android:inputType="none"
                                android:focusable="false"
                                android:cursorVisible="false" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Time Section -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:textSize="12sp"
                            android:textColor="#999999"
                            android:layout_marginBottom="4dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/edit_text_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_clock"
                                android:contentDescription="Clock"
                                android:layout_marginEnd="8dp"
                                app:tint="#666666" />

                            <TextView
                                android:id="@+id/tvSelectedTime"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="9:00 AM"
                                android:textSize="14sp"
                                android:textColor="#333333" />

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_dropdown"
                                android:contentDescription="Dropdown"
                                app:tint="#999999" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- Vehicle Type Selection Section -->
            <LinearLayout
                android:id="@+id/vehicleTypeSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="8dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Vehicle Type"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:padding="16dp"
                    android:paddingBottom="12dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="16dp"
                    android:clipToPadding="false">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/vehicleTypeRecyclerView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clipToPadding="false" />

                </HorizontalScrollView>

            </LinearLayout>

            <!-- Distance and ETA -->
            <TextView
                android:id="@+id/distanceEtaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance: -- km  •  ETA: -- min"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <!-- View Route Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewRoute"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="16dp"
                android:text="View Route on Map"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:visibility="gone"
                android:backgroundTint="@color/medium_gray"
                app:cornerRadius="8dp"
                app:icon="@drawable/map"
                app:iconSize="18dp"
                app:iconTint="@null" />

            <!-- Bid Price Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="8dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Bid Price"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:padding="16dp"
                    android:paddingBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_text_background"
                    android:paddingHorizontal="16dp"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/rupee"
                        android:contentDescription="@string/currency"
                        app:tint="#999999"
                        android:layout_marginEnd="12dp" />

                    <EditText
                        android:id="@+id/etBidPrice"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:inputType="numberDecimal|number"
                        android:hint="Enter your bid"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textColorHint="#CCCCCC"
                        android:background="@null" />

                </LinearLayout>

                <!-- Quick Bid Options -->
                <LinearLayout
                    android:id="@+id/quickBidOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bidOption1"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="₹0"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:backgroundTint="#F0F0F0"
                        android:textColor="#333333"
                        app:cornerRadius="18dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bidOption2"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="₹0"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:backgroundTint="#F0F0F0"
                        android:textColor="#333333"
                        app:cornerRadius="18dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bidOption3"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="₹0"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:backgroundTint="#F0F0F0"
                        android:textColor="#333333"
                        app:cornerRadius="18dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/suggestedPriceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FFF9E6"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/info"
                        android:contentDescription="@string/info"
                        app:tint="#FFA500"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tvSuggestedRange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Suggested range ₹0 - ₹0"
                        android:textSize="14sp"
                        android:textColor="#FFA500" />

                </LinearLayout>

            </LinearLayout>

            <!-- Add Note Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="8dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Note (Optional)"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:padding="16dp"
                    android:paddingBottom="8dp" />

                <EditText
                    android:id="@+id/noteInput"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="textMultiLine"
                    android:hint="e.g., 2 passengers with small luggage"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textColorHint="#CCCCCC"
                    android:background="@drawable/edit_text_background"
                    android:padding="16dp"
                    android:gravity="top"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

            <!-- Scheduled Ride Info Banner -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#E3F2FD"
                android:padding="12dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/info"
                        android:contentDescription="Info"
                        android:layout_marginEnd="8dp"
                        app:tint="#2196F3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scheduled Ride"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#2196F3" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Driver will be assigned 15 minutes before your scheduled time"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:layout_marginStart="26dp" />
            </LinearLayout>

            <!-- Schedule Ride Button (Inside ScrollView) -->
            <FrameLayout
                android:id="@+id/scheduleButtonContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScheduleRide"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Schedule Ride"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@color/primary_color"
                    app:cornerRadius="8dp" />

                <ProgressBar
                    android:id="@+id/scheduleProgressBar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:indeterminateTint="@android:color/white"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>