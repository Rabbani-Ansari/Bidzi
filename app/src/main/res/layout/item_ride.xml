<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">

        <!-- Driver Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Driver Avatar -->
            <TextView
                android:id="@+id/tvDriverInitial"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="D"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/circle_orange" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvDriverName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Driver Name"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_gray" />

                    <!-- Online Indicator -->
                    <View
                        android:id="@+id/viewOnlineIndicator"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/circle_green"
                        android:layout_marginStart="8dp"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/tvDriverRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.8 ⭐"
                        android:textSize="12sp"
                        android:textColor="@color/medium_gray" />

                    <TextView
                        android:id="@+id/tvDriverTrips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• 150 trips"
                        android:textSize="12sp"
                        android:textColor="@color/medium_gray"
                        android:layout_marginStart="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Vehicle Info -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/tvVehicleInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sedan • KA-01-AB-1234"
                    android:textSize="11sp"
                    android:textColor="@color/medium_gray"
                    android:maxLines="1" />
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginBottom="12dp" />

        <!-- Pickup Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/circle_orange"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPickupLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pickup"
                    android:textSize="12sp"
                    android:textColor="@color/medium_gray" />

                <TextView
                    android:id="@+id/tvPickupName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MG Road Metro"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_gray"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Pickup Distance from User -->
            <TextView
                android:id="@+id/tvPickupDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.3 km away"
                android:textSize="11sp"
                android:textColor="@color/green_dark"
                android:textStyle="bold"
                android:background="@drawable/bg_distance_badge"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <!-- Drop Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/circle_green"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDropLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drop"
                    android:textSize="12sp"
                    android:textColor="@color/medium_gray" />

                <TextView
                    android:id="@+id/tvDropName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phoenix Mall"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_gray"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Distance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location"
                android:layout_marginEnd="8dp"
                android:contentDescription="Distance" />

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.2 km"
                android:textSize="14sp"
                android:textColor="@color/dark_gray" />
        </LinearLayout>

        <!-- Info Section (Seats, Time) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_info_section"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Seats Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_shared_rides"
                        android:layout_marginEnd="6dp"
                        android:contentDescription="Seats" />

                    <TextView
                        android:id="@+id/tvSeatsInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2/3 seats filled"
                        android:textSize="13sp"
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Time Info -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_clock"
                        android:layout_marginEnd="6dp"
                        android:contentDescription="Time" />

                    <TextView
                        android:id="@+id/tvLeavesIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leaves in 8 min"
                        android:textSize="13sp"
                        android:textColor="@color/orange"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Riders Section (Optional - shown only if riders exist) -->
            <LinearLayout
                android:id="@+id/llRiders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current riders:"
                    android:textSize="11sp"
                    android:textColor="@color/medium_gray" />

                <TextView
                    android:id="@+id/tvRiders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rahul, Priya"
                    android:textSize="12sp"
                    android:textColor="@color/dark_gray"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Fare and Join Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your fare"
                    android:textSize="12sp"
                    android:textColor="@color/medium_gray"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvFare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹60"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/orange" />
            </LinearLayout>

            <Button
                android:id="@+id/btnJoinRide"
                android:layout_width="140dp"
                android:layout_height="48dp"
                android:text="Join Ride"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_orange"
                android:layout_marginStart="12dp" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>