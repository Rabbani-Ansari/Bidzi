<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    android:paddingTop="8dp"
    android:paddingBottom="24dp">

    <!-- Handle Bar -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bottom_sheet_handle" />

    <!-- Driver Arriving Status -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:background="@drawable/status_badge_background"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/green_dot" />

        <TextView
            android:id="@+id/driverArrivingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver arriving in 8 min"
            android:textSize="14sp"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Driver Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:layout_marginBottom="20dp">

        <!-- Driver Avatar -->
        <TextView
            android:id="@+id/driverAvatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="RK"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/avatar_background" />

        <!-- Driver Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/driverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rajesh Kumar"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/star"
                    android:contentDescription="Rating"
                    app:tint="#FFC107" />

                <TextView
                    android:id="@+id/driverRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.8"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginStart="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•"
                    android:textSize="14sp"
                    android:textColor="#CCCCCC"
                    android:layout_marginHorizontal="8dp" />

                <TextView
                    android:id="@+id/vehicleNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MH12 AB 1234"
                    android:textSize="14sp"
                    android:textColor="#666666" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Call and Message Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:layout_marginBottom="20dp">

        <!-- Call Button -->
        <LinearLayout
            android:id="@+id/callButton"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/button_outline_background"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/call"
                android:contentDescription="Call"
                app:tint="#333333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Message Button -->
        <LinearLayout
            android:id="@+id/messageButton"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/button_outline_background"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/messenger"
                android:contentDescription="Message"
                app:tint="#333333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Co-riders Section -->
    <LinearLayout
        android:id="@+id/coRidersSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/coriders_background"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="20dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_shared_rides"
                android:contentDescription="Co-riders"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Co-riders"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFA500"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/coRidersNames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priya, Sneha"
            android:textSize="15sp"
            android:textColor="#333333" />

    </LinearLayout>

    <!-- Your Fare Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Your fare"
            android:textSize="16sp"
            android:textColor="#999999" />

        <TextView
            android:id="@+id/fareAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹60"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="•"
            android:textSize="16sp"
            android:textColor="#CCCCCC"
            android:layout_marginHorizontal="8dp" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.2 km"
            android:textSize="16sp"
            android:textColor="#999999" />

    </LinearLayout>

</LinearLayout>