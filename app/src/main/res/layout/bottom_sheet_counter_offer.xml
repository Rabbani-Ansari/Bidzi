<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="24dp"
    android:background="@drawable/bg_bottom_sheet">

    <!-- Drag Handle -->
    <View
        android:id="@+id/dragHandle"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_drag_handle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Header Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/dragHandle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Make a Counter Offer"
            android:textSize="22sp"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnClose"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Close Button -->
        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_clear"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:contentDescription="Close"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Driver Info Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardDriverInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#F5F5F5"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Driver Avatar -->
            <TextView
                android:id="@+id/tvDriverInitials"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="RK"
                android:textSize="18sp"
                android:textColor="#FF6B35"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bg_avatar_circle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Driver Info Container -->
            <LinearLayout
                android:id="@+id/driverInfoContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@id/tvDriverInitials"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvCurrentPrice"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- Driver Name -->
                <TextView
                    android:id="@+id/tvDriverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rajesh Kumar"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- Rating -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â­"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.9"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginStart="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginStart="6dp" />

                    <TextView
                        android:id="@+id/tvVehicleInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auto"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginStart="6dp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Current Price -->
            <TextView
                android:id="@+id/tvCurrentPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹80"
                android:textSize="24sp"
                android:textColor="#FF6B35"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enter your counter offer price for this ride"
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/cardDriverInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Counter Price Label -->
    <TextView
        android:id="@+id/tvCounterLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Counter Price (â‚¹)"
        android:textSize="14sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Price Input Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardPriceInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#FFFFFF"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/tvCounterLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹"
                android:textSize="24sp"
                android:textColor="#666666"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etCounterPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="80"
                android:textSize="32sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:inputType="number"
                android:maxLength="4"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <ImageView
                android:id="@+id/btnClearPrice"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Clear"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Quick Suggestions Label -->
    <TextView
        android:id="@+id/tvSuggestionsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quick Suggestions"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/cardPriceInput"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Chip Group -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupPrices"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:singleSelection="true"
        app:selectionRequired="false"
        app:layout_constraintTop_toBottomOf="@id/tvSuggestionsLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPrice1"
            style="@style/Widget.Material3.Chip.Suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹60" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPrice2"
            style="@style/Widget.Material3.Chip.Suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹70" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPrice3"
            style="@style/Widget.Material3.Chip.Suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹75" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPrice4"
            style="@style/Widget.Material3.Chip.Suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹85" />

    </com.google.android.material.chip.ChipGroup>

    <!-- Note -->
    <TextView
        android:id="@+id/tvNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸ’¡ Lower offers have higher acceptance rates"
        android:textSize="12sp"
        android:textColor="#666666"
        android:background="#FFF9E6"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/chipGroupPrices"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvNote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Cancel Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#F5F5F5"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cancel"
                android:textSize="16sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>

        <!-- Send Counter Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnSendCounter"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#FF6B35"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/tvSendCounterText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Send Counter"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
