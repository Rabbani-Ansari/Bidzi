<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <!-- Main Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Driver Avatar -->
            <TextView
                android:id="@+id/tvDriverInitials"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="RK"
                android:textSize="20sp"
                android:textColor="#FF6B35"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bg_avatar_circle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Online Status Indicator -->
            <View
                android:id="@+id/viewOnlineStatus"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/circle_green"
                app:layout_constraintEnd_toEndOf="@id/tvDriverInitials"
                app:layout_constraintBottom_toBottomOf="@id/tvDriverInitials" />

            <!-- Driver Name -->
            <TextView
                android:id="@+id/tvDriverName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Rajesh Kumar"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@id/tvDriverInitials"
                app:layout_constraintTop_toTopOf="@id/tvDriverInitials"
                app:layout_constraintEnd_toStartOf="@id/tvPrice" />

            <!-- Rating and Trips -->
            <LinearLayout
                android:id="@+id/llRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/tvDriverInitials"
                app:layout_constraintTop_toBottomOf="@id/tvDriverName">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â­"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.9"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginStart="4dp" />

                <TextView
                    android:id="@+id/tvTotalTrips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢ 1250 trips"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Price -->
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹80"
                android:textSize="24sp"
                android:textColor="#FF6B35"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvDriverName" />

            <!-- Savings -->
            <LinearLayout
                android:id="@+id/llSavings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPrice"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â†˜"
                    android:textSize="12sp"
                    android:textColor="#4CAF50" />

                <TextView
                    android:id="@+id/tvSavings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹10"
                    android:textSize="12sp"
                    android:textColor="#4CAF50"
                    android:layout_marginStart="2dp" />
            </LinearLayout>

            <!-- Vehicle Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardVehicle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#F5F5F5"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cardEta"
                app:layout_constraintTop_toBottomOf="@id/llRating">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VEHICLE"
                        android:textSize="10sp"
                        android:textColor="#999999" />

                    <TextView
                        android:id="@+id/tvVehicleInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auto â€¢ MH-02-AB-1234"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ETA Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardEta"
                android:layout_width="90dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#FFF3E0"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:layout_constraintStart_toEndOf="@id/cardVehicle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cardVehicle"
                app:layout_constraintBottom_toBottomOf="@id/cardVehicle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ETA"
                        android:textSize="10sp"
                        android:textColor="#FF9800" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ•"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvEta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 min"
                            android:textSize="14sp"
                            android:textColor="#FF9800"
                            android:textStyle="bold"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Offer Status -->
            <TextView
                android:id="@+id/tvOfferStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accepted Bid â€¢ Just now"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardVehicle" />

            <!-- Counter Offer Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCounterStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#FFF8E1"
                app:cardElevation="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="#FFA726"
                app:layout_constraintTop_toBottomOf="@id/tvOfferStatus"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¬"
                        android:textSize="22sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/tvCounterStatusLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your Counter Offer"
                            android:textSize="13sp"
                            android:textColor="#424242"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvCounterPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹70"
                            android:textSize="20sp"
                            android:textColor="#F57C00"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/tvCounterStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Waiting for driver's response..."
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivCounterStatusIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/clock"
                        android:contentDescription="Status"
                        app:tint="#F57C00" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons (Counter & Accept) -->
            <LinearLayout
                android:id="@+id/llActionButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/cardCounterStatus"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Counter Button -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnCounter"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#F5F5F5"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â†©"
                            android:textSize="16sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tvCounterText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Counter"
                            android:textSize="16sp"
                            android:textColor="#666666"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Accept Button -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnAccept"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#FF9800"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <TextView
                        android:id="@+id/tvAcceptText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Accept"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:gravity="center" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Confirmed State Button (FIXED: Now below cardCounterStatus) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnConfirmed"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#66BB6A"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toBottomOf="@id/cardCounterStatus"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ“"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirmed"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Floating Badges -->
    <TextView
        android:id="@+id/tvConfirmedBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âœ“ CONFIRMED"
        android:textSize="11sp"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_confirmed_badge"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:elevation="4dp"
        android:visibility="gone"
        android:layout_gravity="top|end"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/tvBestOfferBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âš¡ BEST OFFER"
        android:textSize="11sp"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_best_offer_badge"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:elevation="4dp"
        android:visibility="gone"
        android:layout_gravity="top|end"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="12dp" />

</FrameLayout>