<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F5F5F5">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@android:color/white"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/arrow_back_24px"
                android:contentDescription="Back"
                app:tint="#333333" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Finding Driver"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/vehicleTypeText"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="Auto"
                android:textSize="13sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:background="@drawable/badge_background"
                android:paddingHorizontal="12dp" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/contentScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="32dp">

                <!-- Vehicle Animation Container -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginBottom="24dp">

                    <!-- Ripple Effect -->
                    <FrameLayout
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        android:id="@+id/rippleContainer">

                        <View
                            android:id="@+id/ripple1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ripple_circle"
                            android:alpha="0.8" />

                    </FrameLayout>

                    <!-- Vehicle Image -->
                    <ImageView
                        android:id="@+id/vehicleImage"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_gravity="center"
                        android:src="@drawable/tuk_tuk2"
                        android:contentDescription="Vehicle"
                        android:scaleType="centerInside" />

                </FrameLayout>

                <!-- Searching Text with Animation -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/searchingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Searching for drivers"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/searchingSubtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nearby drivers are being notified"
                        android:textSize="15sp"
                        android:textColor="#999999"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Wait Time and Status -->
                <LinearLayout
                    android:id="@+id/statusContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="32dp"
                    android:paddingHorizontal="16dp">

                    <ProgressBar
                        android:id="@+id/waitingProgress"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        style="?android:attr/progressBarStyle"
                        android:indeterminate="true"
                        android:indeterminateTint="#FFA500" />

                    <TextView
                        android:id="@+id/waitingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waiting 0s"
                        android:textSize="14sp"
                        android:textColor="#FFA500"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="•"
                        android:textSize="14sp"
                        android:textColor="#CCCCCC"
                        android:layout_marginHorizontal="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usually takes less than a minute"
                        android:textSize="14sp"
                        android:textColor="#999999" />

                </LinearLayout>

                <!-- Ride Details Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Card Header -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ride Details"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginBottom="20dp" />

                        <!-- Pickup Detail -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="Pickup"
                                android:textSize="14sp"
                                android:textColor="#999999" />

                            <TextView
                                android:id="@+id/pickupAddressText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Current Location"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#333333"
                                android:gravity="end"
                                android:maxLines="2"
                                android:ellipsize="end" />

                        </LinearLayout>

                        <!-- Drop Detail -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="Drop"
                                android:textSize="14sp"
                                android:textColor="#999999" />

                            <TextView
                                android:id="@+id/dropAddressText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Phoenix Mall"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#333333"
                                android:gravity="end"
                                android:maxLines="2"
                                android:ellipsize="end" />

                        </LinearLayout>

                        <!-- Distance Detail -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="Distance"
                                android:textSize="14sp"
                                android:textColor="#999999" />

                            <TextView
                                android:id="@+id/distanceText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="5.2 km"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#333333"
                                android:gravity="end" />

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E8E8E8"
                            android:layout_marginVertical="16dp" />

                        <!-- Offer Detail -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Your Offer"
                                android:textSize="14sp"
                                android:textColor="#999999" />

                            <TextView
                                android:id="@+id/fareText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹80"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#FFA500" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </ScrollView>

        <!-- Cancel Button -->
        <Button
            android:id="@+id/cancelButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Cancel Request"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/button_cancel_background"
            android:layout_margin="16dp" />

    </LinearLayout>
    <!-- Overlay Container -->
    <FrameLayout
        android:id="@+id/overlayContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#CC000000"
        android:clickable="true"
        android:focusable="true">

        <!-- Error Overlay -->
        <LinearLayout
            android:id="@+id/errorOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="32dp"
            android:orientation="vertical"
            android:background="@drawable/overlay_background"
            android:padding="32dp"
            android:gravity="center"
            android:visibility="gone">

            <!-- Error Icon -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/error"
                android:layout_marginBottom="24dp" />

            <!-- Error Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Something Went Wrong"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp" />

            <!-- Error Message -->
            <TextView
                android:id="@+id/errorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unable to connect to server. Please check your internet connection."
                android:textSize="15sp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Error Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/errorRetryButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Retry"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_primary_background"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/errorCancelButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:background="@drawable/button_secondary_background"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- No Driver Overlay -->
        <LinearLayout
            android:id="@+id/noDriverOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="32dp"
            android:orientation="vertical"
            android:background="@drawable/overlay_background"
            android:padding="32dp"
            android:gravity="center"
            android:visibility="gone">

            <!-- No Driver Icon -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/not_found"
                android:layout_marginBottom="24dp" />

            <!-- No Driver Title -->
            <TextView
                android:id="@+id/noDriverTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Drivers Available"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp" />

            <!-- No Driver Message -->
            <TextView
                android:id="@+id/noDriverMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No drivers are available nearby at the moment.\n\nTry increasing your offer or wait a bit."
                android:textSize="15sp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- No Driver Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/noDriverKeepWaitingButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Keep Waiting"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_primary_background"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/noDriverRetryButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Retry"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#FFA500"
                        android:background="@drawable/button_secondary_background"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/noDriverCancelButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Cancel"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#666666"
                        android:background="@drawable/button_secondary_background"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>