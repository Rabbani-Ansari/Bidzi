<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Full Screen Map -->
    <fragment
        android:id="@+id/routeMapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Back Button -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:src="@drawable/arrow_back_24px"
        android:background="@drawable/circle_white_bg"
        android:padding="8dp"
        android:elevation="4dp"
        android:contentDescription="Back" />

    <!-- Route Info Card (Top) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/routeInfoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnBack"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:elevation="6dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Pickup Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/circle_green"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/pickupAddressText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pickup Location"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="#CCCCCC" />

            <!-- Drop Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/circle_green"
                    app:tint="#FF0000"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/dropAddressText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Drop Location"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Distance and ETA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:background="#F5F5F5"
                android:padding="12dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/direction"
                        app:tint="#666666" />

                    <TextView
                        android:id="@+id/routeDistanceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.2 km"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance"
                        android:textSize="12sp"
                        android:textColor="#999999" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DDDDDD" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_schedule"
                        app:tint="#666666" />

                    <TextView
                        android:id="@+id/routeEtaText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 min"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ETA"
                        android:textSize="12sp"
                        android:textColor="#999999" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Loading Progress -->
    <ProgressBar
        android:id="@+id/routeLoadingProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:indeterminateTint="#FFA500" />

    <!-- Confirm Route Button (Bottom) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfirmRoute"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:text="Confirm Route"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:cornerRadius="12dp"
        app:backgroundTint="#000000"
        app:icon="@drawable/ic_checkmark"
        app:iconGravity="start" />

</RelativeLayout>
