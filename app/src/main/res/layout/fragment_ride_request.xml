<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header with Back Button -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_back_24px"
            android:contentDescription="@string/back_button"
            app:tint="#333333" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Request Ride"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <!-- Location Input Cards (Always Visible at Top) -->
    <LinearLayout
        android:id="@+id/locationInputsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerLayout"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="4dp">

        <!-- Pickup Location Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pickup Location"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:paddingHorizontal="16dp"
                android:paddingBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/edit_text_background"
                android:paddingHorizontal="16dp"
                android:layout_marginHorizontal="16dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/circle_orange"
                    android:contentDescription="pickup_location"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/pickupInput"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:hint="Enter pickup location"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:background="@null"
                    android:singleLine="true" />

                <ImageView
                    android:id="@+id/pickupClearIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_clear"
                    android:contentDescription="Clear"
                    android:visibility="gone"
                    android:layout_marginEnd="8dp"
                    app:tint="#999999" />

                <ImageView
                    android:id="@+id/pickMapIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/map"
                    android:contentDescription="Choose on map"
                    android:padding="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Drop Location Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Drop Location"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:paddingHorizontal="16dp"
                android:paddingBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/edit_text_background"
                android:paddingHorizontal="16dp"
                android:layout_marginHorizontal="16dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/circle_green"
                    android:contentDescription="@string/drop_location"
                    app:tint="#00AA00"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/dropInput"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:hint="Enter destination"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:background="@null"
                    android:singleLine="true" />

                <ImageView
                    android:id="@+id/dropClearIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_clear"
                    android:contentDescription="Clear"
                    android:visibility="gone"
                    android:layout_marginEnd="8dp"
                    app:tint="#999999" />

                <ImageView
                    android:id="@+id/dropMapIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/map"
                    android:contentDescription="Choose on map"
                    android:padding="4dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Search Suggestions RecyclerView (Below Location Inputs) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/suggestionsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="300dp"
        android:layout_below="@id/locationInputsLayout"
        android:background="@android:color/white"
        android:visibility="gone"
        android:elevation="8dp" />

    <!-- Main Content ScrollView -->
    <ScrollView
        android:id="@+id/mainContentScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/locationInputsLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingTop="8dp">

            <!-- Vehicle Type Selection Section (Always Visible) -->
            <LinearLayout
                android:id="@+id/vehicleTypeSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="8dp"
                android:elevation="2dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Vehicle Type"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:padding="16dp"
                    android:paddingBottom="12dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="16dp"
                    android:clipToPadding="false">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/vehicleTypeRecyclerView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clipToPadding="false" />

                </HorizontalScrollView>

            </LinearLayout>

            <!-- NEW: Ride Preferences Section -->
            <LinearLayout
                android:id="@+id/ridePreferencesSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="8dp"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ride Preferences"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/preferencesToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:textSize="14sp"
                        android:textColor="@color/primary_color"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:padding="8dp" />

                </LinearLayout>

                <!-- Passengers Selector -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/people"
                        app:tint="#9B1616"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Passengers"
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:orientation="horizontal"
                        android:background="@drawable/counter_background"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/passengerMinus"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/minus"
                            app:tint="#666666"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:padding="8dp" />

                        <TextView
                            android:id="@+id/passengerCount"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:gravity="center" />

                        <ImageView
                            android:id="@+id/passengerPlus"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/add"
                            app:tint="#666666"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:padding="8dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Luggage Options -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/suitcase"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Luggage"
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:orientation="horizontal"
                        android:background="@drawable/counter_background"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/luggageMinus"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/minus"
                            app:tint="#666666"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:padding="8dp" />

                        <TextView
                            android:id="@+id/luggageCount"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:gravity="center" />

                        <ImageView
                            android:id="@+id/luggagePlus"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/add"
                            app:tint="#666666"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:padding="8dp" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <!-- Distance and ETA -->
            <TextView
                android:id="@+id/distanceEtaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance: -- km • ETA: -- min"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- View Route Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewRoute"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="16dp"
                android:text="View Route on Map"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:visibility="gone"
                android:backgroundTint="@color/medium_gray"
                app:cornerRadius="8dp"
                app:icon="@drawable/map"
                app:iconSize="18dp"
                app:iconTint="@null" />

            <!-- Bid Price Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="8dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Bid Price"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:padding="16dp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How much?"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_text_background"
                    android:paddingHorizontal="16dp"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/rupee"
                        android:contentDescription="@string/currency"
                        app:tint="#999999"
                        android:layout_marginEnd="12dp" />

                    <EditText
                        android:id="@+id/bidInput"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:inputType="numberDecimal|number"
                        android:hint="Enter your bid"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textColorHint="#CCCCCC"
                        android:background="@null" />

                </LinearLayout>

                <!-- Quick Bid Options -->
                <LinearLayout
                    android:id="@+id/quickBidOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bidOption1"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="₹0"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:backgroundTint="#F0F0F0"
                        android:textColor="#333333"
                        app:cornerRadius="18dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bidOption2"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="₹0"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:backgroundTint="#F0F0F0"
                        android:textColor="#333333"
                        app:cornerRadius="18dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bidOption3"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="₹0"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:backgroundTint="#F0F0F0"
                        android:textColor="#333333"
                        app:cornerRadius="18dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/suggestedPriceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FFF9E6"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/info"
                        android:contentDescription="@string/info"
                        app:tint="#FFA500"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/suggestedPriceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Suggested range ₹0 - ₹0"
                        android:textSize="14sp"
                        android:textColor="#FFA500" />

                </LinearLayout>

            </LinearLayout>

            <!-- Add Note Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_marginHorizontal="8dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Note (Optional)"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:padding="16dp"
                    android:paddingBottom="8dp" />

                <EditText
                    android:id="@+id/noteInput"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="textMultiLine"
                    android:hint="e.g., 2 passengers with small luggage"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textColorHint="#CCCCCC"
                    android:background="@drawable/edit_text_background"
                    android:padding="16dp"
                    android:gravity="top"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/noteCharCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0/200"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:gravity="end"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp" />

            </LinearLayout>

            <!-- Request Ride Button Container (Now Inside ScrollView, Below Add Note) -->
            <FrameLayout
                android:id="@+id/requestButtonContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/requestButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Request Ride"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@color/primary_color"
                    app:cornerRadius="8dp" />
                <ProgressBar
                    android:id="@+id/requestProgressBar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:indeterminateTint="@android:color/white"
                    android:visibility="gone" />
            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>